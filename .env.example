# Polymarket API Configuration
# Trading API endpoint
POLYMARKET_API_HOST=https://clob.polymarket.com

# Blockchain Configuration
CHAIN_ID=137

# Your Credentials (FILL THESE IN)
# Your private key for signing transactions (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# Your funder address (found below profile picture on Polymarket site)
FUNDER_ADDRESS=your_funder_address_here

# Signature Type (choose one):
# 0 = EOA (Externally Owned Account)
# 1 = Magic/Email Login
# 2 = Browser Wallet (MetaMask, Coinbase Wallet)
SIGNATURE_TYPE=0

# RPC URLs for Polygon network
POLYGON_RPC_URL=https://polygon-rpc.com

# Optional: Markets API endpoint for fetching market data
MARKETS_API_URL=https://gamma-api.polymarket.com

# Optional: Rate limiting configuration
REQUEST_DELAY_MS=1000

# WebSocket Configuration for Real-Time Data
# Polymarket WebSocket endpoint for real-time market updates
WEBSOCKET_URL=wss://ws-subscriptions-clob.polymarket.com
# Enable real-time market resolution tracking (true/false)
ENABLE_REALTIME=true
# WebSocket reconnection settings
WS_RECONNECT_DELAY=5000
WS_MAX_RECONNECT_ATTEMPTS=10